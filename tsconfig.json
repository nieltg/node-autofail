{
  "compilerOptions": {
    /* Basic Options */
    "target": "es3",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "outDir": "./dist",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node"
  }
}
